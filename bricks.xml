<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!--    author    -->
        <brick control="\QUI\Blog\Controls\Author">

            <title>
                <locale group="quiqqer/blog" var="blog.control.author.title"/>
            </title>
            <description>
                <locale group="quiqqer/blog" var="blog.control.author.description"/>
            </description>

            <settings>
                <setting name="guest" type="checkbox">
                    <locale group="quiqqer/blog" var="blog.author.guest"/>
<!--                    <description>-->
<!--                        <locale group="quiqqer/blog" var="blog.author.guest-description"/>-->
<!--                    </description>-->
                </setting>
                <setting name="guestFirstName" type="text">
                    <locale group="quiqqer/blog" var="blog.author.guest-firstName"/>
                </setting>
                <setting name="guestLastName" type="text">
                    <locale group="quiqqer/blog" var="blog.author.guest-firstName"/>
                </setting>
                <setting name="guestImage" class="media-image">
                    <locale group="quiqqer/blog"
                            var="blog.author.guest.image"/>
                </setting>
            </settings>

        </brick>

    </bricks>
</quiqqer>
